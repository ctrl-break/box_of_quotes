<?xml version="1.0" encoding="UTF-8"?>

<form
    addrulepath="/administrator/components/com_quotesbox/models/rules"
>
    <fieldset name="details" label="COM_QUOTESBOX_QUOTE_DETAIL">
  		<field
  				name="id"
  				type="hidden"
  				/>
  		<field
  				name="quote"
          type="textarea"
  				label="COM_QUOTESBOX_QUOTE_LABEL"
  				description="COM_QUOTESBOX_QUOTE_DESC"
  				rows="10"
          cols="5"
  				default=""
          required="true"
  				/>
  		<field
  				name="author"
  				type="text"
          label="COM_QUOTESBOX_AUTHOR_LABEL"
  				description="COM_QUOTESBOX_AUTHOR_DESC"
  				size="40"
  				class="inputbox"
  				default=""
  				/>
      <field
				name="catid"
				type="category"
				extension="com_quotesbox"
				class="inputbox"
				default="79"
				label="COM_QUOTESBOX_FIELD_CATID_LABEL"
				description="COM_QUOTESBOX_FIELD_CATID_DESC"
				required="true"
		  >
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
  	</fieldset>
</form>
